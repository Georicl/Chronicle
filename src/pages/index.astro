---
import Profile from "../components/widget/Profile.astro";
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";

// 定义页面元数据
const pageTitle = "Welcome";
---

<Layout title={pageTitle}>
    <main id="main" class="w-full min-h-screen flex flex-col items-center justify-center bg-[var(--page-bg)]">
        
        <div class="transform scale-110 mb-12 animate-fade-in-up">
            <Profile></Profile>
        </div>

        <a href="/posts/"
           class="
             transition-all duration-300
             px-8 py-3 rounded-full
             bg-[var(--card-bg)] 
             text-[var(--primary)]
             font-bold text-lg
             shadow-lg hover:shadow-xl
             hover:scale-105 active:scale-95
             border border-[var(--primary)]
           "
        >
            Enter
        </a>
        
    </main>
</Layout>

<style>
    /* 简单的入场动画，让 Profile 缓缓升起 */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px) scale(1.1);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1.1);
        }
    }
    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
    }
</style>