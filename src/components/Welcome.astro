---
import { Icon } from "astro-icon/components";
import ImageWrapper from "./misc/ImageWrapper.astro";

const welcomeConfig = {
	avatar: "assets/images/Welcome_page.PNG",
	name: "Georicl",
	// 这里可以写专门针对欢迎页的标语，而不是通用的 Bio
	bio: "欢迎聆听,我的声音",
	links: [
		{
			name: "Mail",
			icon: "ic:baseline-mail",
			url: "mailto:Georicl@outlook.com",
		},
		{
			name: "GitHub",
			icon: "fa6-brands:github",
			url: "https://github.com/Georicl",
		},
	],
};
---

<main id="welcome-section" class="w-full h-screen flex flex-col items-center justify-center bg-[var(--page-bg)] relative z-10">
    
    <div class="transform scale-110 mb-8 animate-fade-in-up">
        
        <div class="card-base p-6 flex flex-col items-center max-w-sm mx-auto bg-white/60 dark:bg-black/40 backdrop-blur-md !shadow-2xl">
            <div class="rounded-xl overflow-hidden w-32 h-32 mb-4 shadow-lg group relative">
                 <div class="absolute transition pointer-events-none group-hover:bg-black/30 w-full h-full z-10 flex items-center justify-center">
                    <Icon name="fa6-regular:address-card" class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-4xl" />
                </div>
                <ImageWrapper src={welcomeConfig.avatar} alt="Avatar" class="w-full h-full object-cover" />
            </div>

            <div class="font-bold text-2xl text-center mb-2 dark:text-neutral-50">
                {welcomeConfig.name}
            </div>

            <div class="h-1.5 w-8 bg-[var(--primary)] rounded-full mb-3"></div>

            <div class="text-center text-neutral-500 dark:text-neutral-400 mb-6 px-4 text-lg">
                {welcomeConfig.bio}
            </div>

            <div class="flex gap-3 justify-center">
                {welcomeConfig.links.map(item => (
                    <a aria-label={item.name} href={item.url} target="_blank" 
                       class="flex items-center justify-center rounded-lg h-12 w-12 bg-[var(--btn-regular-bg)] hover:bg-[var(--btn-regular-bg-hover)] text-[var(--btn-content)] active:scale-95 transition-all shadow-sm">
                        <Icon name={item.icon} class="text-2xl" />
                    </a>
                ))}
            </div>
        </div>
    </div>

    <a href="/posts/"
       class="
         animate-fade-in-up
         transition-all duration-300
         px-10 py-3 rounded-full
         bg-[var(--card-bg)] 
         text-[var(--primary)]
         font-bold text-xl
         shadow-lg hover:shadow-[var(--primary)]/30
         hover:scale-105 active:scale-95
         border-2 border-[var(--primary)]/20
         cursor-pointer
         z-20
       "
       style="animation-delay: 0.2s"
    >
        进入
    </a>
        
</main>